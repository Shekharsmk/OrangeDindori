<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">
    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Total Amount "
            android:layout_weight="3"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="2"
            android:id="@+id/et_amount_detail_cart"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:onClick="totalAmountCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"/>
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_payment_detail_cart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_cod_detail_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cash on delivery"
            android:textSize="18dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/rb_online_detail_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Online Payment"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="4dp">

        <Button
            android:layout_margin="4dp"
            android:id="@+id/bt_cancle_payment_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cancel"
            android:textColor="#ffffff"
            android:background="#FF9800"
            />
        <Button
            android:layout_margin="4dp"
            android:id="@+id/bt_submit_payment_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="submit"
            android:textColor="#ffffff"
            android:background="#FF9800"
            />
    </LinearLayout>
</LinearLayout>